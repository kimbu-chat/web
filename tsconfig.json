{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["./*"],
      "icons/*": ["./assets/icons/*"],
      "@store/*": ["./store/*"],
      "@store": ["./store"],
      "@services/*": ["./services/*"],
      "@containers/*": ["./containers/*"],
      "@sounds/*": ["./assets/sounds/*"],
      "@utils/*": ["./utils/*"],
      "@hooks/*": ["./hooks/*"],
      "@routing/*": ["./routing/*"],
      "@contexts": ["./contexts"],
      "@common/*": ["./common/*"],
      "@components": ["./components"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["build", "node_modules"],
  "include": ["./src/", "./types/", "assets"]
}
