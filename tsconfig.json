{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es5",
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"declaration": false,
		"removeComments": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "build",
		"lib": ["es6", "es7", "dom"],
		"baseUrl": "src",
		"paths": {
			"app/*": ["./app/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"exclude": ["build", "node_modules"]
}
