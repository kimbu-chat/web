{
	"name": "react-hooks-redux-typescript-boilerplate",
	"version": "1.1.1",
	"private": true,
	"description": "A frontend boilerplate with React hooks, Redux and Typescript",
	"homepage": "https://rokoroku.github.io/react-redux-typescript-boilerplate",
	"keywords": [
		"react",
		"hooks",
		"redux",
		"typescript",
		"boilerplate",
		"todomvc"
	],
	"main": "index.js",
	"scripts": {
		"predeploy": "npm run build",
		"deploy": "gh-pages -d build",
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "webpack-dev-server --mode development --hot --progress --color --port 3000 --open",
		"build": "webpack -p --progress --colors",
		"format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
		"lint": "prettier --check . --ext .js,.jsx,.ts,.tsx && eslint . --ext .js,.jsx,.ts,.ts && tsc",
		"lint:fix": "prettier --write . --ext .js,.jsx,.ts,.tsx && eslint . --ext .js,.jsx,.ts,.tsx --fix"
	},
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@types/emoji-mart": "^3.0.2",
		"@types/jwt-decode": "^2.2.1",
		"@types/lodash": "4.14.150",
		"@types/node": "^13.11.0",
		"@types/react": "^16.9.17",
		"@types/react-dom": "^16.9.4",
		"@types/react-image-crop": "^8.1.2",
		"@types/react-infinite-scroller": "^1.2.1",
		"@types/react-redux": "^7.1.5",
		"@types/react-router": "^5.1.5",
		"@types/react-router-dom": "^5.1.5",
		"@types/redux-actions": "^2.6.1",
		"@types/webpack": "^4.41.0",
		"@types/webpack-env": "^1.15.1",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^3.4.2",
		"file-loader": "^6.0.0",
		"html-loader": "^1.1.0",
		"html-webpack-plugin": "^4.0.0-beta.11",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"mini-css-extract-plugin": "^0.9.0",
		"node-sass": "^4.14.1",
		"postcss": "^7.0.25",
		"postcss-browser-reporter": "^0.6.0",
		"postcss-import": "^12.0.1",
		"postcss-loader": "^3.0.0",
		"postcss-preset-env": "^6.7.0",
		"postcss-reporter": "^6.0.1",
		"postcss-url": "^8.0.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"react-hot-loader": "^4.12.18",
		"redux-devtools-extension": "^2.13.8",
		"sass-loader": "^8.0.2",
		"style-loader": "^1.1.3",
		"ts-loader": "^6.2.2",
		"typescript": "^3.9.6",
		"url-loader": "^4.0.0",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10",
		"webpack-dev-server": "^3.10.1"
	},
	"dependencies": {
		"@material-ui/core": "^4.10.2",
		"@material-ui/icons": "^4.9.1",
		"@material-ui/lab": "^4.0.0-alpha.56",
		"@microsoft/signalr": "3.1.3",
		"axios": "^0.19.2",
		"emoji-mart": "^3.0.0",
		"i18next": "^19.6.3",
		"immer": "^7.0.5",
		"jwt-decode": "^2.2.0",
		"libphonenumber-js": "^1.7.53",
		"lodash": "^4.17.15",
		"moment": "^2.27.0",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-i18next": "^11.5.1",
		"react-image-crop": "^8.6.4",
		"react-infinite-scroller": "^1.2.4",
		"react-redux": "^7.2.0",
		"react-router": "^5.1.2",
		"react-router-dom": "^5.2.0",
		"redux": "^4.0.5",
		"redux-actions": "^2.6.5",
		"redux-saga": "^1.1.3",
		"typesafe-actions": "^5.1.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		],
		"*.{html,css,less,ejs,json}": [
			"prettier --write",
			"git add"
		]
	}
}
